<div class='d-flex flex-column align-items-center'>
  <h2>新規登録</h2>
  <%= form_with model: @user, url: user_registration_path do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <!-- ユーザ登録の際に name 登録するため、フォーム  -->
    <div class="form-group">
      <%= f.label :ユーザー名 , class: 'font-weight-bold'%><br>
      <%= f.text_field :name %>
    </div>

    <div class="form-group">
      <%= f.label :email , class: 'font-weight-bold'%><br>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: 'm-0', class: 'font-weight-bold' %>
      <% if @minimum_password_length %>
        <div>(<%= @minimum_password_length %> 文字以上で入力)</div>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation , class: 'font-weight-bold'%><br>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="form-group">
      <br><%= f.submit "登 録" %>
    </div>

    <div class="actions">
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>