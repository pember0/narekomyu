<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td>
          <!-- userの画像-->
          <%= link_to user_path(post.user) do %>
            <%= image_tag post.user.get_profile_image(100, 100) %>
          <% end %>
        </td>

        <!-- postの詳細画面へのリンク-->
        <td>
          <%= link_to post_path(post) do %>
              <%= post.title %>
          <% end %>
        </td>
        <td><%= post.question_content %></td>

        <td id="like_btn_<%= post.id %>">
          <%= render "likes/btn", post: post %>
        </td>
        <td>
          <!-- コメントの件数表示 -->
          <p>コメント数：<%= post.comments.count %></p>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>