<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-lg-10 px-5 px-sm-0 mx-auto">
      <!--更新画面-->
  		<h1>投稿内容編集</h1>
  		<!--バリデーションによるエラーメッセージ設定 -->
      <% if @post.errors.any? %>
        <%= @post.errors.count %>件 エラーが発生しました。
        <ul>
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <!--投稿情報 -->
  		<%= render 'form', post: @post %>

  		<!--詳細画面のリンク -->
      <%= link_to "戻る", post_path(@post.id) %>

  </div>
</div>
