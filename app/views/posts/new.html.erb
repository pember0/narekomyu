<div class="container">
  <div class='row'>
    <div class="col-sm-12 col-lg-10 px-5 px-sm-0 mx-auto">
      <h1>投稿</h1>
      <!--バリデーションによるエラーメッセージ設定 -->
      <% if @post.errors.any? %>
        <%= @post.errors.count %>件 エラーが発生しました。
        <ul>
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @post,local:true, url: posts_path do |f| %>
        <div class="form-group">
          <%= f.label :タイトル, class: 'font-weight-bold' %>
          <%= f.text_field :title, class: 'form-control post_title' %>
        </div>

        <div class="form-group">
          <%= f.label :質問内容, class: 'font-weight-bold' %>
          <%= f.text_area :question_content, rows: 10, class: 'form-control post_question_content' %>
        </div>

        <div class="form-group">
          <div>
            <%= f.label :タグ, class: 'font-weight-bold' %>
          </div>
          <%= f.select :tag_id, options_from_collection_for_select( Tag.all, :id, :tag_name),  {class: "form-item", id: "last_name"} %>
        </div>

        <div class="form-group">
          <%= f.submit class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
