<h1>Posts#show</h1>
<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <!-- render [部分テンプレートファイルの指定], [ローカル変数]:[渡す値] -->
      <h2>会員情報</h2>
      <%= render 'users/info', user: @user %>
    </div>

    <div class='col-md-8 offset-md-1'>
  		<h2>投稿詳細</h2>
  		<table class='table'>

    		  <tr>
            <td>
              <!-- userの詳細画面へのリンク-->
              <%= link_to user_path(@post.user) do %>
                  <!-- 画像 -->
                  <%= image_tag @post.user.get_profile_image(100, 100) %><br>
                  <%= @post.user.name %>
              <% end %>
            </td>

            <!-- 投稿の詳細画面へのリンク-->
            <td>
              <%= link_to post_path(@post) do %>
                <%= @post.title %>
              <% end %>
            </td>

            <td><%= @post.question_content %></td>
              <td>
                <% if @post.user == current_user || current_user.is_administrator? %>
                    <%= link_to "Edit", edit_post_path(@post.id) %>
                    <%= link_to "Destroy", post_path(@post.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
                <% end %>
              </td>

            <td id="like_btn_<%= @post.id %>">
              <%= render "likes/btn", post: @post %>
            </td>
            <td id="comment_counter">
               <%= render "comments/counter", post: @post %>
            </td>
          </tr>
        </table>


          <div id="comment_index">
           <%= render "comments/index", post: @post %>
         </div>
         <div>
           <%= render "comments/form", post: @post, comment: @comment %>
         </div>
    </div>
  </div>
</div>
