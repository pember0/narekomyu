<table class='table'>
  <thead>
    <tr>
      <th></th>
      <th>image</th>
      <th>名前</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td>
          <!-- userの画像 -->
          <%= image_tag user.get_profile_image(100, 100) %>
        </td>

        <td>
          <span><%= user.name %></span>
        </td>
        <!-- userの詳細画面へのリンク-->
        <td><%= link_to 'Show', user_path(user) %></td>

        <!-- 管理者フラグの場合、退会ボタンを表示する-->
        <td>
         <% if current_user.is_administrator %>
       	  <%= link_to "Destroy", user_path(user.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
         <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>