<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>ユーザー名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% users.each do |user| %>
      <tr>
        <td>
          <!-- userの画像 -->
          <%= image_tag user.get_profile_image(100, 100) %>
        </td>
        <td>
          <!-- user名 -->
          <span><%= user.name %></span>
        </td>
        <!-- userの詳細画面へのリンク-->
        <td><%= link_to '詳細', user_path(user) %></td>

        <!-- 管理者フラグの場合、退会ボタンを表示する-->
        <td>
         <% if current_user.is_administrator %>
       	  <%= link_to "削除", user_path(user.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
         <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>